<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.kuroyukidev.digicybersleuthevos" version="1.8.8" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>DigiDex Evos</name>
    <description>
        Digivolution Data for the Digimon Story: Cyber Sleuth game for PS Vita in the palm of your hand!
    </description>
    <author email="kuroyuki.dev@gmail.com" href="https://kuroyukidev.github.io">
        KuroyukiDev
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.6" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.3.3" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.7.1" />
    <platform name="android">
        <icon density="ldpi" src="www/res/icon/android/digivice-icon.png" />
        <icon density="mdpi" src="www/res/icon/android/digivice-icon.png" />
        <icon density="hdpi" src="www/res/icon/android/digivice-icon.png" />
        <icon density="xhdpi" src="www/res/icon/android/digivice-icon.png" />
        <icon density="xxhdpi" src="www/res/icon/android/digivice-icon.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/digivice-icon.png" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
		<preference name="orientation" value="portrait" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
	<preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <engine name="android" spec="~7.0.0" />
</widget>
